<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    tools:context="test.bwie.com.quarter_hour.ZhaoHuiMiMa">



    <test.bwie.com.quarter_hour.XCRoundRectImageView
        android:id="@+id/XCRoundRectImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/te_you"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/te_you"
        android:layout_marginTop="40dp"
        android:src="@mipmap/tb" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_above="@+id/te_xia"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/yuan4">


        <EditText
            android:textSize="13dp"
            android:textColorHint="#cccccc"
            android:id="@+id/ed_shouji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/editText2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="@null"
            android:hint="请输入手机号" />

        <TextView
            android:gravity="center"
            android:id="@+id/te_huo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="获取验证码"
            android:textColor="#cccccc"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cccccc" />

        <EditText
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColorHint="#cccccc"
            android:hint="请输入验证码"
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:background="@null"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_shouji"
            android:layout_alignBottom="@+id/ed_shouji"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:text="86+ | "
            android:textColor="#cccccc" />




    </RelativeLayout>

    <Button
        android:id="@+id/te_xia"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/yuan3"
        android:text="下一步"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/te_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/te_xia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="游客登录"
        android:textColor="#cccccc"
        android:textSize="15dp" />


</RelativeLayout>
