<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    tools:context="test.bwie.com.quarter_hour.ZhuCeYeMian">


    <test.bwie.com.quarter_hour.XCRoundRectImageView
        android:id="@+id/XCRoundRectImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/te_you"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/te_you"
        android:layout_marginTop="40dp"
        android:src="@mipmap/tb" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/te_zhuce"
        android:layout_alignStart="@+id/te_zhuce"
        android:layout_below="@+id/XCRoundRectImageView"
        android:layout_marginTop="13dp"
        android:background="@drawable/yuan4">


        <EditText
            android:id="@+id/ed_shou"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColorHint="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cccccc" />

        <EditText
            android:id="@+id/ed_mima"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColorHint="#cccccc"
            android:hint="输入大小写和数字，密码不能超过8位"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:background="@null"
            android:inputType="textPassword" />


    </RelativeLayout>

    <Button
        android:id="@+id/te_zhuce"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/yuan3"
        android:text="注册"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/te_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/te_zhuce"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="游客登录"
        android:textColor="#cccccc"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/te_yi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="16dp"
        android:text="已有账号?"
        android:textColor="#cccccc" />




</RelativeLayout>
