<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.meg7.widget.CustomShapeImageView
        android:id="@+id/img_tx"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/tx" />

    <TextView
        android:id="@+id/te_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_tx"
        android:layout_toEndOf="@+id/img_tx"
        android:layout_toRightOf="@+id/img_tx"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/te_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/te_name2"
        android:layout_alignStart="@+id/te_name2"
        android:layout_below="@+id/te_name2"
        android:text="TextView" />

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/imag_dong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/te_name2"
        app:srcCompat="@mipmap/icon_open" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/te_content"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_tx"
        android:layout_alignStart="@+id/img_tx"
        android:layout_below="@+id/te_time"
        android:text="TextView" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_tu"
        android:background="#cccccc" />

    <ImageView
        android:layout_marginLeft="16dp"
        android:id="@+id/iv_tu"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/te_content"
        app:srcCompat="@mipmap/ic_launcher_round" />

</RelativeLayout>
