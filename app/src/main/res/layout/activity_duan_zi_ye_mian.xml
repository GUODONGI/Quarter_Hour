<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.bwie.com.quarter_hour.DuanZiYeMian">

    <RelativeLayout
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/relativeLayout12">


        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="取消" />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:text="发表文章" />

        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:id="@+id/te_fa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView14"
            android:text="发表" />
    </RelativeLayout>

    <EditText
        android:gravity="clip_horizontal"
        android:textSize="12dp"
        android:hint="请输入内容,禁止输入色情,暴力等违反国家法律的内容,违\n者将以封号处理"
        android:background="@null"
        android:id="@+id/ed_shu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout12"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/te_jiatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_shu"
        app:srcCompat="@mipmap/tianjia" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/te_jiatu">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
